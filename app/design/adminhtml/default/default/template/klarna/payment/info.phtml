/**
 * Klarna payment type template
 */

/** @var $this Klarna_Kco_Block_Info_Kco */
?>
<p><img width="150" src="https://cdn.klarna.com/1.0/shared/image/generic/logo/en_us/basic/blue-black.png?width=300"
        alt="<?php echo $this->escapeHtml($this->getMethod()->getTitle()) ?>"/></p>
<p><?php echo $this->getKcoPaymentMethodDescription() ?></p>
<?php if ($_specificInfo = $this->getSpecificInformation()): ?>
    <table>
        <?php foreach ($_specificInfo as $_label => $_value): ?>
            <tr>
                <td><?php echo $this->escapeHtml($_label) ?>:</td>
                <td>
                    <?php if ($this->isStringUrl($_value)): ?>
                        <a href="<?php echo $_value; ?>" target="_blank"><?php echo $this->__('Click Here') ?></a>
                    <?php else: ?>
                        <?php echo nl2br(implode($this->getValueAsArray($_value, true), "\n")) ?>
                    <?php endif; ?>
                </td>
            </tr>
        <?php endforeach; ?>
    </table>
<?php endif; ?>
<?php echo $this->getChildHtml() ?>
